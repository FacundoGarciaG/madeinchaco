<div class="contenedor">
    <div class="cuerpo">
        <div class="container">

            <div class="row saludo">
                <div class="col">
                    <h1> Hola {{usuario}}!</h1>
                </div>
                <div class="col cerrar text-end">
                    <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i
                            class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>

            <div class="row listado">
                <div class="col">
                    <h2>Listado de Contenido</h2>
                </div>
                <div class="col text-end">
                    <a class="btn btn-success" href="/admin/contenido/agregar"><i class="fas fa-plus-square"></i> Nuevo</a>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Titulo</th>
                                <th class="text-end" scope="col">Acciones</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each contenido}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{titulo}}</td>
                                <td class="text-end">
                                    <a class="btn btn-light" href="/admin/contenido/modificar/{{id}}"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger" href="/admin/contenido/eliminar/{{id}}"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>