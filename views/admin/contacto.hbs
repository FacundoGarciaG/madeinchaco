<div class="contenedor">
    <div class="container">

        <div class="row listado">
            <div class="col">
                <h2>Listado de contactos:</h2>
            </div>
            <div class="col">
                <div class="container-fluid">
                    <form class="" action="/admin/contacto" method="get">
                        <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q"
                            {{#if q}} value="{{q}}" {{/if}}>
                        <button class="btn btn-outline-dark" type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>
            </div>

        </div>
        <div class="row tabla">
            <div class="col">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th class="col">Nombre</th>
                            <th class="col">Apellido</th>
                            <th class="col">Telefono</th>
                            <th scope="col">Email</th>
                            <th class="col" scope="col">Mensaje</th>
                            <th class="col">Mostrar</th>


                        </tr>
                    </thead>
                    <tbody>
                        {{#each contacto}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td>{{apellido}}</td>
                            <td>{{telefono}}</td>
                            <td>{{email}}</td>
                            <td>{{comentarios}}</td>
                            <td><input class="form-check-input mt-0" type="checkbox" value="" 
                                    aria-label="Checkbox for following text input"></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{message}}
                {{#if is_search}}
                {{#unless contacto.length}}
                <div class="alert alert-warning" role="alert">
                    No encontramos resultados para "<b>{{q}}</b>"
                </div>
                {{/unless}}
                {{/if}}
            </div>
        </div>


    </div>
</div>