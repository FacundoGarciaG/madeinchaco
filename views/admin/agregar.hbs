<div class="contenedor">
    <div class="container">
        <div class="row">
            <div class="col">
                <p>Agregar un nuevo contenido:</p>
                <form method="post" action="/admin/contenido/agregar" enctype="multipart/form-data">
                    <div class="mb-3 row">
                        <div class="col-sm-12">
                            <label for="titulo">TITULO</label>
                            <input type="text" class="form-control" name="titulo">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="col-sm-12">
                            <label for="subtitulo">SUBTITULO</label>
                            <textarea name="subtitulo" class="form-control" cols="30" rows="10"></textarea>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="col-sm-12">
                            <label for="cuerpo">CUERPO</label>
                            <textarea name="cuerpo" id="my-expressjs-tinymce-app" class="form-control" cols="30" rows="10"></textarea>
                        </div>
                    </div>


                    <div class="mb-3 row">
                        <div class="col-sm-12">
                        <input type="file" name="imagen" class="form-control" >
                        </div>
                    </div>


                    <button type="submit" class="btn btn-success"><i class="far fa-check-square"></i> Guardar</button>
                    <a href="/admin/contenido" class="btn btn-dark">Cancelar</a>
                </form>
                {{#if error}}
                <div class="alert alert-warning" role="alert">
                    <p>{{message}}</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>